.pg-mobile-orders {
  .cr-tab-panel {
    &__navigation-container-navigation {
      width: 38% !important;
    }

    &__optinal-head {
      align-items: center;
      display: flex;
      flex-direction: row;
      height: 32px;
      justify-content: flex-end;
      margin: 0;
      padding: 0;
      width: 62%;
    }
  }

  &__optional-head {
    align-items: center;
    display: flex;
    flex-direction: row;
    height: 32px;
    justify-content: flex-end;
    margin: 0;
    padding: 0;
    width: 100%;

    span {
      align-items: center;
      color: var(--primary-cta-color);
      display: flex;
      font-size: 14px;
      font-weight: normal;
      height: 32px;
      letter-spacing: 0.1px;
      padding-right: 8px;
    }

    svg {
      path {
        fill: var(--primary-cta-color);
      }
    }
  }

  &__content {
    padding: 12px 20px;

    .no-data {
      align-items: flex-start;
      color: var(--table-text-color);
      display: flex;
      flex-direction: row;
      font-size: 14px;
      justify-content: center;
      line-height: 24px;
      padding: 10px 0;
      width: 100%;
    }
  }
}
