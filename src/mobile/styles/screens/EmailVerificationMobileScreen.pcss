/* stylelint-disable */
.pg-mobile-app {
  .cr-mobile-email-verification {
    .cr-mobile-modal__block--open {
      height: 50%;
      top: 50vh;
    }
    .cr-mobile-modal__header {
      &-title {
        font-size: 12px;
        flex: 2;
        color: var(--primary-text-color);
        text-align: left;
      }
      &-close {
        flex: 0;
      }
      &-back {
        display: none;
      }
    }
    .pg-emailverification-container {
      background: unset;
      height: auto;

      .pg-emailverification {
        background: unset;
        box-shadow: none;

        &-body {
          &-text {
            padding: 0 12px;
            font-size: 14px;
            color: var(--primary-text-color);
            text-align: left;
          }

          &-container {
            &-button {
              background: var(--button-primary-cta-background-color);
            }
          }
        }
      }
    }
    .pg-emailverification-body-container {
      button {
        margin: 0 13px;
        font-size: 14px;
        text-transform: uppercase;
        color: var(--primary-text-color);
      }
    }
  }
}
