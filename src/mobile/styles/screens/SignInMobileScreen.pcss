/* stylelint-disable */
.pg-mobile-app {
  .cr-mobile-kyc {
    .cr-mobile-modal__header-back {
      display: none;
    }
    .cr-mobile-modal__header-title {
      text-align: left;
      color: var(--primary-text-color);
    }
  }
  .pg-sign-in-screen {
    background: none;
    height: unset;

    .cr-email-form__options-group {
      display: none;
    }
    .cr-email-form__header {
      width: auto;
      margin-left: 0;
      font-size: 14px;
      color: var(--primary-text-color);
    }

    .cr-email-form__button-wrapper {
      min-height: auto;
      margin-top: 35px;
    }
    .pg-sign-in-screen__register {
      text-align: center;
      font-size: 12px;
      margin-top: 12px;

      &-button {
        color: var(--button-primary-cta-background-color);
        text-transform: capitalize;
        padding-left: 2px;
      }
    }

    .cr-sign-in-form {
      box-shadow: none;
    }

    .cr-sign-in-form__form-content {
      position: static;
    }
    .cr-sign-in-form__group--focused input {
      border-width: 2px;
      border-color: var(--button-primary-cta-background-color);
    }

    .cr-sign-in-form__button-wrapper {
      position: static;
      margin-top: 12px;
      button {
        background: var(--button-primary-cta-background-color);
      }
    }

    .cr-sign-in-form__label {
      font-size: 12px;
    }

    .cr-sign-in-form__bottom-section {
      &-password {
        text-align: right;
        font-size: 12px;
        color: var(--button-primary-cta-background-color);
      }
      position: static;
    }

    .custom-input {
      font-size: 12px;

      input {
        font-size: 16px;
        &::placeholder {
          font-size: 14px;
        }
      }
    }
  }
}
