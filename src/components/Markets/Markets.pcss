.cr-markets {
  background: var(--body-background-color);
  padding-bottom: 0;

  .cr-title-component {
    color: var(--primary-text-color);
    font-size: 1em;
    font-weight: lighter;
  }

  .cr-table {
    background: var(--body-background-color);

    th {
      color: var(--secondary-text-color);
      font-size: 0.83em;
      font-weight: lighter;
      padding-top: 2px;
      padding-bottom: 12px;
    }

    td {
      color: var(--secondary-text-color);
      font-size: 0.83em;
    }

    .__positive {
      background: var(--transparent);
      color: green;
    }

    .__negative {
      background: var(--transparent);
      color: red;
    }

    th:first-child,
    td:first-child {
      padding-left: calc(var(--gap) * 2);
      text-align: left;
    }

    th:last-child,
    td:last-child {
      padding-right: calc(var(--gap) * 2);
      text-align: right;
    }

    tr:nth-child(even) {
      background: var(--body-background-color);
    }

    &__filters {
      max-width: 100%;
      overflow-x: auto;
    }

    &__filter {
      color: var(--secondary-text-color);
      font-size: 0.83em;
      font-weight: lighter;
      padding-left: 3px;
      padding-right: 3px;

      &--active {
        color: var(--primary-text-color);
      }
    }

    &__row {
      &--selected {
        background: var(--markets-selected-color) !important;
      }
    }
  }

  .cr-search {
    background: var(--body-background-color);
    margin: 0;
    margin-top: var(--gap);
    padding: 0;

    &__icon {
      background: var(--body-background-color);
    }

    input {
      background: var(--body-background-color);
      color: var(--secondary-text-color);
      font-weight: lighter;
      width: calc(100% - var(--gap) * 9);
      border-bottom-color: var(--input-border);

      &::placeholder {
        color: var(--secondary-text-color);
      }
    }
  }
}
