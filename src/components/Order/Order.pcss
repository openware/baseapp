.cr-order {
  .cr-tab-panel {
    .cr-tab {
      width: 100%;
    }

    &__navigation-container {
      display: inline-block;
      width: 100%;
    }
  }

  .cr-tab-content {
    .cr-order-item {
      &__content {
        .cr-dropdown {
          background-color: var(--order-dropdown-background-color);
        }

        .cr-order-input {
          &__crypto-icon {
            background-color: var(--order-crypto-icon-background-color);

            [class^=cr-crypto-font] {
              color: var(--order-crypto-font-color);
            }
          }

          .cr-input {
            input {
              color: var(--order-input-color);
            }
          }
        }
      }
    }
  }
}
