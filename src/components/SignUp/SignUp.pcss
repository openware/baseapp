.cr-sign-up-form {
  border-radius: 3px;
  box-shadow: 0 10px 15px var(--shadow-color-level-2);
  max-width: 424px;
  min-height: 620px;
  position: relative;

  &__options-group {
    border-bottom: 2px solid var(--divider-color-level-2);
    height: 58px;
    width: 100%;
  }

  &__option {
    background: var(--subheader-background-color);
    display: inline-block;
    height: 58px;
    width: 50%;

    .__selected {
      border-bottom: 2px solid var(--primary-cta-color);
      color: var(--primary-text-color);
    }
  }

  &__option-inner {
    background: transparent;
    cursor: pointer;
    font-size: 14px;
    font-style: normal;
    font-weight: 500;
    height: 58px;
    letter-spacing: 0.0357143em;
    line-height: 58px;
    margin: 0 auto;
    text-align: center;
    text-transform: uppercase;
    width: 75%;
  }

  &__form-content {
    bottom: 23px;
    box-sizing: border-box;
    left: 23px;
    position: absolute;
    right: 23px;
    top: 90px;

    .custom-control {
      &-input {
        &:checked ~ .custom-control-label {
          &::before {
            background-color: var(--input-checkbox-background-color-active);
            border-color: var(--input-border-color-active);
            transition: 0.2s;
          }
        }

        &:focus ~ .custom-control-label {
          &::before {
            border-color: var(--input-border-color-active);
            box-shadow: 0 0 0 0.2rem var(--input-checkbox-shadow-color-active);
          }
        }
      }

      &-label {
        display: flex;
        flex-direction: row;
        font-size: calc(var(--gap) * 2.35);
        justify-content: space-around;
        width: 83%;

        &::before {
          background-color: var(--input-background-color);
          border-color: var(--input-border-color);
          height: 18px;
          margin-right: calc(var(--gap) * 3);
          top: 0;
          transition: 0.2s;
          width: 18px;
        }

        &::after {
          height: 18px;
          top: 0;
          width: 18px;
        }

        &:hover {
          cursor: pointer;
        }
      }
    }
  }

  & > * {
    background: transparent;
  }

  &__group {
    background: transparent;
    margin-bottom: 20px;
    position: relative;

    .custom-input {
      label {
        margin-top: -1px;
      }
    }
  }

  &__error {
    background: transparent;
    color: var(--system-red);
    margin-top: 5px;
  }

  &__error-message {
    align-items: center;
    background: transparent;
    color: var(--system-red);
    display: flex;
    flex: 1;
    font-size: calc(var(--gap) * 2.5);
    justify-content: center;
    min-height: calc(var(--gap) * 6);
  }

  &__button-wrapper {
    background: transparent;
    bottom: 0;
    left: 0;
    position: absolute;
    right: 0;
  }

  &__button-wrapper--empty {
    background: transparent;
    bottom: 0 !important;
    left: 0;
    position: absolute;
    right: 0;
  }

  &__loader {
    background: transparent;
    min-height: calc(var(--gap) * 6);
  }

  &__input {
    width: 100%;

    input {
      border: 1px solid var(--input-border-color);
      border-radius: 4px;
      box-sizing: border-box;
      color: var(--input-text-color);
      font-size: 12px;
      height: 50px;
      padding: 0 10px;
      width: 100%;
    }
  }

  &__footer {
    align-items: center;
    display: flex;
    justify-content: center;

    & > * {
      background: transparent;
    }

    &-create {
      color: var(--sign-in-label-color);
    }

    &-signin {
      cursor: pointer;
      padding-left: 10px;
    }
  }

  &__recaptcha {
    display: flex;
    justify-content: center;
    left: 0;
    position: absolute;
    right: 0;
    top: 10px;
    z-index: 2;
  }
}
