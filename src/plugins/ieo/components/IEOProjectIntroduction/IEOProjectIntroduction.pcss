.ieo-profile-project-introduction {
  background: var(--main-bg);
  color: var(--color-white);
  margin-bottom: calc(var(--gap) * 5);
  border-radius: calc(var(--gap) * 0.5);

  &__header {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    padding: calc(var(--gap) * 1) calc(var(--gap) * 5.75);
    padding-left: calc(var(--gap) * 2.5);
    width: 100%;
    background: var(--ieo-header-bg);
    font-size: calc(var(--gap) * 2);
    font-weight: bold;
    line-height: calc(var(--gap) * 3.2);
    border-radius: calc(var(--gap) * 0.5) calc(var(--gap) * 0.5) 0 0;
    border-bottom: calc(var(--gap) * 0.25) solid var(--ieo-header-border);
  }

  &__body {
    padding: calc(var(--gap) * 3.8);

    p {
      padding: var(--gap) 0;
      font-size: calc(var(--gap) * 2);
      line-height: calc(var(--gap) * 2.5);
    }

    @media( max-width: 576px) {
      padding: calc(var(--gap) * 1.5);

      p {
        padding: 0 calc(var(--gap) * 2.5);
      }
    }
  }
}
