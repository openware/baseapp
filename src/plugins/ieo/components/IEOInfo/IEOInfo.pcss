.ieo-profile-info {
  background: var(--main-bg);
  color: var(--white);
  margin-bottom: calc(var(--gap) * 5);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: var(--main-bg);
  border-radius: calc(var(--gap) * 1.25);

  @media (max-width: 768px) {
    flex-direction: column;
  }

  &__main {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    padding: calc(var(--gap) * 2.75);
    width: 70%;
    font-size: calc(var(--gap) * 3);
    font-weight: bold;
    line-height: calc(var(--gap) * 3.2);

    &__info {
      display: flex;
      flex-direction: row;
      justify-content: flex-start;

      &__coin-area {
        text-align: center;
        width: 35%;
        background: var(--ieo-header-bg);
        border-radius: calc(var(--gap) * 1.25);

        &__coin-logo {
          margin: 0 auto;

          img {
            width: 100%;
          }

          @media (max-width: 991.98px) {
            margin-top: calc(var(--gap) * 5);
          }
        }

        &__coin-currency {
          font-size: calc(var(--gap) * 4);
          font-weight: bold;
          margin: calc(var(--gap) * 2.5);

          @media (max-width: 991.98px) {
            margin-top: calc(var(--gap) * 5);
          }
        }

        &__currency-name {
          font-size: calc(var(--gap) * 1.3);
          opacity: 0.6;
          font-weight: 400;
        }
      }

      @media (max-width: 576px) {
        flex-direction: column;
      }

      &__value {
        margin: 0 calc(var(--gap) * 2.5);
        width: 65%;

        .expiration-time {
          margin-bottom: calc(var(--gap) * 2.5);

          &__label {
            font-size: calc(var(--gap) * 1.5);
            font-weight: 400;
            opacity: 0.6;
          }

          &__value {
            font-size: calc(var(--gap) * 3.75);

            @media (max-width: 991.99px) {
              font-size: calc(var(--gap) * 2.8);
            }
          }
        }

        .ieo-price {
          margin-bottom: calc(var(--gap) * 1.825);

          &__label {
            font-size: calc(var(--gap) * 1.5);
            line-height: calc(var(--gap) * 1.7);
            font-weight: 400;
            opacity: 0.6;
          }

          &__value {
            font-size: calc(var(--gap) * 2);
          }
        }

        .ieo-goal {
          margin-bottom: calc(var(--gap) * 1.825);

          &__label {
            font-size: calc(var(--gap) * 1.5);
            line-height: calc(var(--gap) * 1.7);
            font-weight: 400;
            opacity: 0.6;
          }

          &__value {
            font-size: calc(var(--gap) * 2);
          }
        }

        .curent-progress-block {
          &__progress-bar {
            height: calc(var(--gap) * 2);
            width: 100%;
            background: var(--progress-bar);
            border-radius: calc(var(--gap) * 1.25);

          &__current {
            height: calc(var(--gap) * 2);
              width: 20%;
              background: var(--progress-green);
              border-radius: calc(var(--gap) * 1.25)
            }
          }

          &__value {
            display: flex;
            flex-direction: row;
            justify-content: space-between;

            &__label {
              font-size: calc(var(--gap) * 1.5);
              font-weight: 400;
              opacity: 0.6;
            }

            &__current-value {
              color: var(--progress-green);
              font-size: calc(var(--gap) * 1.5);
            }
          }
        }
      }
    }

    &__description {
      margin-top: calc(var(--gap) * 3);
      padding: calc(var(--gap) * 2.75) 0;
      font-size: calc(var(--gap) * 1.5);
      line-height: calc(var(--gap) * 2.5);
      border-top: calc(var(--gap) * 0.25) solid var(--border-top);
    }
  }

  &__order {
    background: var(--ieo-header-bg);
    padding: calc(var(--gap) * 2.5);
    border-radius: 0 calc(var(--gap) * 1.25) calc(var(--gap) * 1.25) 0;
    width: 30%;
  }
}


@media (max-width: 576px) {
  .ieo-profile-info__main {
    width: 100%;
    padding: calc(var(--gap) * 2);

    &__info {
      &__coin-area {
        width: 100%;
        justify-content: center;
        padding: 0;
      }

      &__value {
        width: 100%;
        margin: calc(var(--gap) * 2.5) 0 calc(var(--gap) * 2.5) 0;

        .expiration-time,
        .ieo-price,
        .ieo-goal,
        .curent-progress-block {
          margin-bottom: calc(var(--gap) * 1.75);
        }

        .curent-progress-block {
          &__price {
            font-size: calc(var(--gap) * 1.7);
          }
        }
      }
    }

    &__description {
      margin-top: 0;
    }
  }
}


@media (max-width: 576px) {
  .ieo-profile-info__main {
    width: 100%;
    padding: calc(var(--gap) * 2);

    &__info {
      &__coin-area {
        width: 100%;
        justify-content: center;
        padding: 0;
      }

      &__value {
        width: 100%;
        margin: calc(var(--gap) * 2.5) 0 calc(var(--gap) * 2.5) 0;

        .expiration-time,
        .ieo-price,
        .ieo-goal,
        .curent-progress-block {
          margin-bottom: calc(var(--gap) * 1.75);
        }

        .curent-progress-block {
          &__price {
            font-size: calc(var(--gap) * 1.7);
          }
        }
      }
    }

    &__description {
      margin-top: 0;
    }
  }
}