.pg-asks {
  width: 100%;
  background: var(--base-bright);

  @media (min-width: 640px) and (max-width: 992px) {
    flex: 1;
    max-width: 100%;
    margin-right: 0;
  }

  @media (max-width: 640px) {
    max-width: 100%;
  }
}

.cr-table-background--left {
  .cr-table-background__row {
  padding: 15px ;
  margin-bottom: 2px;
  }
}

.pg-asks--loading {
  height: 100%;
  background: rgba(0, 0, 0, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
}
