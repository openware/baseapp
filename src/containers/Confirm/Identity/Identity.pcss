.pg-confirm__content-identity {
  margin: 0 auto;

  &-forms {
    font-size: calc(var(--gap) * 2.33);
    height: calc(var(--big-gap) * 3.69);
    margin: 0 calc(var(--gap) * 1.2) calc(var(--gap) * 4.4) calc(var(--gap) * 3);
    overflow-x: hidden;
    overflow-y: auto;
    padding-right: calc(var(--gap) * 1.5);

    &::-webkit-scrollbar {
      width: 0;
    }

    &::-webkit-scrollbar-track {
      background-color: var(--divider-color);
    }

    &::-webkit-scrollbar-thumb {
      background-color: var(--primary-cta-color);
    }
  }

  &-col {
    flex-direction: row;
    flex-wrap: wrap;

    display: flex;
    justify-content: space-around;
    width: 100%;

    &-right {
      align-items: flex-end;
    }

    &-row {
      width: 50%;
      margin-top: calc(var(--gap) * 2);

      &-is-active {
        margin-top: 0 !important;
        height: calc(var(--gap) * 10.5)!important;
        margin-bottom: calc(var(--gap) * 0.5);
        border: 1px solid var(--primary-cta-color) !important;
      }

      fieldset {
        color: var(--secondary-text-color);
        border-radius: calc(var(--gap) * 0.6);
        border: 1px solid var(--input-border);
        box-sizing: border-box;
        height: calc(var(--gap) * 8.16);
        width: 95%;
        margin-right: 10px;
      }

      &-text {
        display: inline-block;
        font-size: calc(var(--gap) * 2.33);
        height: calc(var(--gap) * 5);
        padding-right: calc(var(--gap) * 6.66);
        text-align: right;
        width: calc(var(--big-gap) * 2.16);
      }

      &-content {
        display: inline-block;
        position: relative;
        width: 95%;

        &-label {
          position: absolute;
          margin-left: calc(var(--gap) * 1.42);
          padding: 0 calc(var(--gap) * 0.33);
          background-color: var(--body-background-color);
          margin-top: calc(var(--gap) * -1.5);
          z-index: 1;
        }

        &-number-dropdown {
          .dropdown {
            &-menu {
              transform: none !important;
              top: auto !important;
              height: 75px;
              overflow-y: scroll;
              overflow-x: hidden;
            }
          }
        }

        &--focused {
          color: var(--primary-cta-color) !important;
          border: 1px solid var(--primary-cta-color) !important;
        }

        &--wrong {
          color: var(--system-red) !important;
          border: 1px solid var(--system-red) !important;
        }

        legend {
          background-color: var(--body-background-color);
          position:absolute;
          top: calc(var(--gap) * -1.5);
          left: 5%;
          width: auto;
          padding: 0 calc(var(--gap) * 0.5);
          font-size: calc(var(--gap) * 2);
        }

        input {
          width: 100%;
          color: var(--primary-text-color);
          background: transparent;
          border: unset;
          bottom: 0;
          font-size: calc(var(--gap) * 2);
          margin-top: calc(var(--gap) * 2);
          margin-left: calc(var(--gap) * 1.2);

          &::placeholder {
            color: var(--text-muted);
          }
        }

        .custom-input {
          height: 100%;
          padding-left: calc(var(--gap) * 1.2);

          label {
            left: 3%;
            margin-top: -11px;
          }

          input {
            margin-left: 0;
          }
        }

        &:focus-within {
          color: var(--primary-cta-color);
        }
      }
    }
  }
}

@media (max-width: 576px) {
  .pg-confirm__content-identity {
    &-forms {
      height: auto;
    }

    &-col {
      flex-direction: column;

      &-row {
        width: 100%;
      }
    }
  }
}
