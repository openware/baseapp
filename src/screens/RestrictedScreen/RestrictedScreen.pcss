.pg-restricted-screen {
  align-items: center;
  color: var(--primary-text-color);
  display: flex;
  flex-direction: column;
  height: 100vh;
  justify-content: center;
  width: 100%;

  &__title {
    font-size: 144px;
    font-weight: bold;
    letter-spacing: 10px;
    line-height: 76px;
  }

  &__content {
    font-size: 36px;
    font-weight: 300;
    padding-top: 36px;
  }
}
