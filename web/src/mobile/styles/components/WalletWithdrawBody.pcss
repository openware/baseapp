/* stylelint-disable */
.cr-mobile-wallet-withdraw-body {
  background: var(--body-background-color);
  padding: 16px;
  .cr-wallet-item__single {
    display: none;
  }

  &--disabled {
    padding: 0;
    height: 300px;
  }

  .custom-input {
    position: relative;
    flex-grow: 1;

    input {
      height: 48px !important;
    }

    label {
      background: var(--body-background-color);
      font-size: 10px;
      text-transform: uppercase;
      font-weight: bold;
      letter-spacing: 0.06em;
      left: 0;
      margin-top: -18px;
      padding: 0;
      position: absolute;
    }
  }

  .pg-blur-withdraw {
    height: 300px;
  }

  &__submit {
    .cr-mobile-modal__block--open {
      height: calc(100vh - 250px);
    }
  }

  &__confirmation {
    .cr-mobile-modal__block--open {
      height: 55vh;
      top: 42vh;
    }
  }

  &__confirmation, &__submit {
    .pg-exchange-modal-submit-footer {
      margin: 0 14px;
    }
    .pg-exchange-modal-submit-body {
      margin: 14px;

      p {
        word-break: break-word;
        font-size: 14px;
        color: var(--primary-text-color);
        text-align: left;
      }
    }
  }

  .pg-beneficiaries {
    .cr-mobile-modal__block--open {
      top: 0;
    }
  }

  .pg-beneficiaries__dropdown {
    position: relative;

    .pg-beneficiaries__dropdown__body {
      top: 70px;
    }

    .fiat-body {
      top: 125px;
    }
  }

  .pg-beneficiaries__dropdown__tip {
    top: 70px;
  }

  .cr-email-form {
    box-shadow: unset;
  }
  .cr-mobile-modal__block, .beneficiaries-confirmation-modal {
    background: var(--body-background-color);
  }
  .beneficiaries-confirmation-modal {
    padding: 0 14px;
  }
  .cr-email-form__button-wrapper {
    min-height: auto;
  }
  .cr-email-form__form-content__info {
    display: none;
  }

  .cr-email-form__button-wrapper {
    margin-top: 24px;
  }

  .cr-withdraw__summary-field {
    padding-right: 0 !important;
    color: var(--primary-text-color);
    font-size: 14px;
  }

  .cr-withdraw__group__amount {
    margin-top: 32px;
  }
  .cr-withdraw__deep {
    margin-top: 18px;
    button {
      width: 100%;
    }
  }
  .cr-withdraw-column {
    &:first-child {
      margin-bottom: 12px;
    }
  }

  .cr-summary-field-message {
    margin-bottom: 13px;
  }

  .cr-withdraw__group__code {
    margin-bottom: 24px;
    margin-top: 24px;
  }

  .cr-email-form__options-group {
    display: none;
  }
  .cr-mobile-modal {
    .cr-email-form__form-content {
      padding: 0 14px;
      .custom-input {
        input {
          height: 49px;
        }
      }

      .confirmation-modal__content {
        span {
          color: var(--primary-text-color);
        }

        svg {
          display: none;
        }
      }
    }

    .beneficiaries-add-address-modal {
      padding: 24px 14px;
      input {
        height: 49px;
      }

      .cr-email-form__button-wrapper {
        min-height: auto;
        button {
          font-weight: bold;
          color: var(--primary-text-color);
          letter-spacing: 1px;
        }
      }
    }

    &__header {
      &-back {
        display: none;
      }

      &-title {
        text-align: left;
        color: var(--primary-text-color);
        font-weight: 500;
        font-size: 12px;
      }

      &-close {
        flex: 0;
      }
    }

    &__body {
      height: calc(100vh - 56px);

      .cr-email-form__group {
        margin-bottom: 24px;
      }
    }
  }
}
