.pg-quick-exchange {
  align-items: center;
  display: flex;
  justify-content: center;
  min-height: calc(var(--big-gap) * 11);

  .cr-quick-exchange {
    background: var(--body-background-color);
    box-shadow: 3px 3px 10px 3px var(--shadow-color-level-1);
    position: relative;
    width: 468px;

    &__header {
      background: var(--subheader-background-color);
      color: var(--primary-text-color);
      letter-spacing: 0.1px;
      line-height: 20px;
      padding: 6px 12px;
    }

    &__body {
      padding: 0 30px 30px;

      &-swap {
        display: flex;
        justify-content: center;
        align-items: center;
      }

      &-currency-block {
        display: flex;
        align-items: center;
        margin: 24px 0;

        &-dropdown {
          margin: 0;
          padding: 0;
          width: 35%;

          .show {
            button {
              outline: none;
              border: none !important;
              border-bottom: 1px solid #e3e9f1 !important;
              border-radius: unset !important;
            }
          }

          .dropdown-toggle {
            height: unset;
            padding: 9.5px 8px;
            border: none !important;
            border-bottom: 1px solid #e3e9f1 !important;
            border-radius: unset;
          }
        }

        .cr-email-form__group {
          width: 65%;
          margin: 0;
          padding-right: 8px;

          &--focused {
            input {
              border: none !important;
              border-bottom: 1px solid #e3e9f1 !important;
              border-radius: unset;
            }
          }

          .custom-input {
            .cr-email-form__label {
              left: 0;
              padding: 0;
              margin-top: -12px;
              color: rgba(255, 255, 255, 0.6);
            }

            input {
              padding: 12px 0;
              border: none;
              border-bottom: 1px solid #e3e9f1;
              border-radius: unset;
              font-size: 16px;
              color: #fff;
            }
          }
        }
      }

      &-info {
        display: flex;

        &-price {
          color: rgba(255, 255, 255, 0.5);
          font-size: 14px;
          width: 60%;

          span {
            color: #fff;
          }
        }

        &-warning {
          width: 40%;
          font-size: 10px;
          letter-spacing: 0.5px;
          color: orange;
        }
      }

      &-summary {
        display: flex;
        align-items: center;
        justify-content: center;
        background: #171C29;
        border-radius: 8px;
        padding: 14px;
        margin-bottom: 14px;

        &-currency {
          display: flex;
          flex-direction: column;
          flex-grow: 3;

          &-label {
            color: rgba(255, 255, 255, 0.5);
            font-size: 14px;
          }

          &-value {
            color: #fff;
            font-size: 18px;
          }
        }

        &-icons {
          flex-grow: 3;
        }
      }

      &-button {
        margin-top: 24px;

        .btn {
          width: 100%;
          padding: 15px;
        }
      }
    }
  }
}
