.pg-confirm__content-documents {
  align-items: flex-start;
  display: flex;
  flex-direction: column;
  height: 100%;
  height: max-content;
  justify-content: flex-start;
  margin: 0;
  max-width: 380px;
  width: 100vw;

  &__row {
    align-items: flex-start;
    display: flex;
    flex-direction: row;
    height: max-content;
    justify-content: space-between;
    width: 100%;

    &__content {
      width: 100%;
    }
  }
}
